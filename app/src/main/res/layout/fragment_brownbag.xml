<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/two_grid_unit">

    <TextView
        android:id="@+id/fragment_brownbag_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Test 0"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/fragment_brownbag_doit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_brownbag_test"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Test"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/fragment_brownbag_previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_brownbag_test"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Vorher"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/fragment_brownbag_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_brownbag_test"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:text="Weiter"
        android:textColor="@color/black" />


</RelativeLayout>