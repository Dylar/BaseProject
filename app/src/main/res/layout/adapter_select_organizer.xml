<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/half_grid_unit">

    <ImageView
        android:id="@+id/adapter_select_organizer_image"
        android:layout_width="@dimen/six_grid_unit"
        android:layout_height="@dimen/six_grid_unit"
        android:gravity="center" />

    <TextView
        android:id="@+id/adapter_select_organizer_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingStart="@dimen/two_grid_unit" />
</LinearLayout>